function scr_txt_desert_chief1(){
	switch(global.language)
    {
        case 0: //English  
            #region  ENG text
            text1 = "[fnt_pixel]Welcome to our [c_yellow]desert island[/c]! As you can see, there's a big storm outside.";
            text2 = "[fnt_pixel]Not only is it creating strange rocks out of thin air, but it's also causing all the water in our fountain to disappear.";
            text3 = "[fnt_pixel]And it's still hot in here. I wonder if it has something to do with the [c_red]man[/c] who came through here the other day. I think he was headed for the temple.";
            text4 = "[fnt_pixel]My men are here now, so why don't you go and find out what happened? We won't last long without water.";
            #endregion
            break;
        case 1: //russian
            text1 = "[fnt_pixel_ru]Добро пожаловать на наш [c_yellow]пустынный остров[/c]! Как видишь снаружи сильная буря.";
            text2 = "[fnt_pixel_ru]Мало того что она создает странные камни прямо из воздуха, так из за этого еще и вся вода из нашего фонтана пропала.";
            text3 = "[fnt_pixel_ru]И тут до сих пор жарко. Интересно связано ли это с [c_red]мужчиной[/c], который недавно тут проходил? Кажется он направлялся в храм.";
            text4 = "[fnt_pixel_ru]Мои люди сейчас тут, поэтому может быть ты сходишь и разузнаешь что случилось? Без воды мы долго не протянем.";
            break;
        case 2: //spanish
            text1 = "[fnt_pixel]¡Bienvenido a nuestra [c_yellow]isla del desierto[/c]! Como puedes ver, hay una gran tormenta afuera.";
            text2 = "[fnt_pixel]No solo está creando extrañas rocas de la nada, sino que también está haciendo que toda el agua de nuestra fuente desaparezca.";
            text3 = "[fnt_pixel]Y todavía hace calor aquí. Me pregunto si tiene algo que ver con el [c_red]hombre[/c] que pasó por aquí el otro día. Creo que se dirigía hacia el templo.";
            text4 = "[fnt_pixel]Mis hombres están aquí ahora, ¿por qué no vas y averiguas qué pasó? No duraremos mucho sin agua.";
            break;
        case 3: //chinese
            text1 = "[fnt_pixel]欢迎来到我们[c_yellow]的沙漠岛[/c]！如你所见，外面正在暴风雨。";
            text2 = "[fnt_pixel]它不仅从空气中创造出奇怪的岩石，还使我们喷泉里的所有水消失。";
            text3 = "[fnt_pixel]而且这里还很热。我在想这是否和前几天经过这里的[c_red]那个人有关[/c]。我想他是朝着寺庙方向去的。";
            text4 = "[fnt_pixel]我的人现在在这里，为什么你不去找出发生了什么呢？没有水我们活不长。";
            break;
        case 4: //portug
            text1 = "[fnt_pixel]Bem-vindo à nossa [c_yellow]ilha deserta[/c]! Como você pode ver, há uma grande tempestade lá fora.";
            text2 = "[fnt_pixel]Não só está criando rochas estranhas do nada, mas também está fazendo toda a água da nossa fonte desaparecer.";
            text3 = "[fnt_pixel]E ainda está quente aqui. Eu me pergunto se tem algo a ver com o [c_red]homem[/c] que passou por aqui outro dia. Eu acho que ele estava indo em direção ao templo.";
            text4 = "[fnt_pixel]Meus homens estão aqui agora, então por que você não vai e descobre o que aconteceu? Não duraremos muito sem água.";
            break;
        case 5: //brazil
            text1 = "[fnt_pixel]Bem-vindo à nossa [c_yellow]ilha deserta[/c]! Como você pode ver, há uma grande tempestade lá fora.";
            text2 = "[fnt_pixel]Não só está criando rochas estranhas do nada, mas também está fazendo toda a água da nossa fonte desaparecer.";
            text3 = "[fnt_pixel]E ainda está quente aqui. Eu me pergunto se tem algo a ver com o [c_red]homem[/c] que passou por aqui no outro dia. Acho que ele estava indo em direção ao templo.";
            text4 = "[fnt_pixel]Meus homens estão aqui agora, então por que você não vai e descobre o que aconteceu? Não vamos durar muito sem água.";
            break;
        case 6: //polish
            text1 = "[fnt_pixel]Witamy na naszej [c_yellow]pustynnej wyspie[/c]! Jak widzisz, na zewnątrz szaleje wielka burza.";
            text2 = "[fnt_pixel]Nie tylko tworzy ona dziwaczne skały z niczego, ale także powoduje, że cała woda w naszej fontannie znika.";
            text3 = "[fnt_pixel]I nadal jest tutaj gorąco. Zastanawiam się, czy ma to coś wspólnego z [c_red]mężczyzną[/c], który przeszedł tędy kilka dni temu. Wydaje mi się, że zmierzał w stronę świątyni.";
            text4 = "[fnt_pixel]Moje ludzie są tutaj teraz, więc może pójdziesz i dowiesz się, co się stało? Bez wody nie wytrzymamy długo.";
            break;
        case 7: //japanese
            text1 = "[fnt_pixel]私たちの[c_yellow]砂漠の島[/c]へようこそ！ご覧の通り、外は大嵐が吹いています。";
            text2 = "[fnt_pixel]それだけでなく、突如として奇妙な岩を生み出しているだけでなく、泉の水もすべて消えてしまっています。";
            text3 = "[fnt_pixel]それにもかかわらず、ここはまだ暑い。 先日ここを通った[c_red]男[/c]が何か関係があるのではないかと思います。彼は神殿に向かっていたと思います。";
            text4 = "[fnt_pixel]今私の男たちはここにいるので、何が起ったのか見つけてきてはどうですか？ 水がなければ私たちは長くは持ちません。";
            break;
        case 8: //deutch
            text1 = "[fnt_pixel]Willkommen auf unserer [c_yellow]Wüsteninsel[/c]! Wie Sie sehen können, tobt draußen ein großer Sturm. ";
            text2 = "[fnt_pixel]Er erschafft nicht nur seltsame Felsen aus dem Nichts, sondern lässt auch das gesamte Wasser in unserem Brunnen verschwinden. ";
            text3 = "[fnt_pixel]Und es ist immer noch heiß hier. Ich frage mich, ob das etwas mit dem [c_red]Mann[/c] zu tun hat, der neulich hier durchgekommen ist. Ich glaube, er ist in Richtung des Tempels gezogen. ";
            text4 = "[fnt_pixel]Meine Leute sind jetzt hier, warum gehst du nicht hin und findest heraus, was passiert ist? Ohne Wasser halten wir nicht lange durch.";
            break;
        case 9: //french
            text1 = "[fnt_pixel]Bienvenue sur notre [c_yellow]île déserte[/c]! Comme vous pouvez le voir, il y a une grosse tempête dehors.";
            text2 = "[fnt_pixel]Non seulement elle crée d'étranges rochers à partir de rien, mais elle fait aussi disparaître toute l'eau de notre fontaine.";
            text3 = "[fnt_pixel]Et il fait toujours chaud ici. Je me demande si cela a quelque chose à voir avec [c_red]l'homme[/c] qui est passé par ici l'autre jour. Je pense qu'il se dirigeait vers le temple.";
            text4 = "[fnt_pixel]Mes hommes sont ici maintenant, alors pourquoi ne pas aller voir ce qui s'est passé? Nous ne durerons pas longtemps sans eau.";
            break;
        case 10: //Italian
            text1 = "[fnt_pixel]Benvenuto nella nostra [c_yellow]isola deserta[/c]! Come puoi vedere, c'è una grande tempesta fuori.";
            text2 = "[fnt_pixel]Non solo sta creando strane rocce dal nulla, ma sta anche facendo sparire tutta l'acqua della nostra fontana.";
            text3 = "[fnt_pixel]E qui dentro fa ancora caldo. Mi chiedo se abbia qualcosa a che fare con [c_red]l'uomo[/c] che è passato da qui l'altro giorno. Credo si stesse dirigendo verso il tempio.";
            text4 = "[fnt_pixel]I miei uomini sono qui ora, quindi perché non vai a scoprire cosa è successo? Non sopravviveremo a lungo senza acqua.";
            break;
    }    
}
	
function scr_txt_desert_chief2(){
	switch(global.language)
    {
        case 0: //English  
            #region  ENG text
            text1 = "[fnt_pixel]I see you're back already. Finally the storm is gone and won't be making those cubes everywhere anymore.";
            text2 = "[fnt_pixel]And the water from the fountain is flowing...great! Thanks so much for helping us with this.";
            text3 = "[fnt_pixel]Hope to see you again sometime.";
            text4 = "[fnt_pixel]Here's a little [c_yellow]gift[/c] from me.";
            #endregion
            break;
        case 1: //russian
            text1 = "[fnt_pixel_ru]Я смотрю ты уже вернулся. Наконец-то буря пропала и больше не будет создавать эти кубы повсюду.";
            text2 = "[fnt_pixel_ru]И вода из фонтана пошла...замечательно! Огромное спасибо что помог нам с этим.";
            text3 = "[fnt_pixel_ru]Надеюсь мы когда-нибудь еще увидимся.";
            text4 = "[fnt_pixel_ru]Вот небольшой [c_yellow]подарок[/c] от меня.";
            break;
        case 2: //spanish
            text1 = "[fnt_pixel]Veo que ya has vuelto. Finalmente la tormenta se ha ido y ya no estará haciendo esos cubos por todas partes.";
            text2 = "[fnt_pixel]Y el agua de la fuente está fluyendo... ¡genial! Muchas gracias por ayudarnos con esto.";
            text3 = "[fnt_pixel]Espero verte de nuevo alguna vez.";
            text4 = "[fnt_pixel]Aquí tienes un pequeño [c_yellow]regalo[/c] de mi parte.";
            break;
        case 3: //chinese
            text1 = "[fnt_pixel]我看到你已经回来了。终于，暴风雨消失了，不再到处制造这些立方体了。";
            text2 = "[fnt_pixel]喷泉的水正在流动...太好了！非常感谢你帮助我们解决这个问题。";
            text3 = "[fnt_pixel]希望以后还能见到你。";
            text4 = "[fnt_pixel]这是我送给你的一[c_yellow]点小礼物[/c]。";
            break;
        case 4: //portug
            text1 = "[fnt_pixel]Vejo que você já voltou. Finalmente a tempestade se foi e não vai mais fazer esses cubos por toda parte.";
			text2 = "[fnt_pixel]E a água da fonte está fluindo...ótimo! Muito obrigado por nos ajudar com isso.";
			text3 = "[fnt_pixel]Espero ver você novamente alguma hora.";
			text4 = "[fnt_pixel]Aqui está um pequeno [c_yellow]presente[/c] meu.";
            break;
        case 5: //brazil
            text1 = "[fnt_pixel]Vejo que você já está de volta. Finalmente a tempestade se foi e não vai mais fazer esses cubos por toda parte.";
			text2 = "[fnt_pixel]E a água da fonte está fluindo...ótimo! Muito obrigado por nos ajudar com isso.";
			text3 = "[fnt_pixel]Espero ver você novamente algum dia.";
			text4 = "[fnt_pixel]Aqui está um pequeno [c_yellow]presente[/c] meu.";
            break;
        case 6: //polish
            text1 = "[fnt_pixel]Widzę, że już wróciłeś. Wreszcie burza minęła i nie będzie już tworzyć tych sześcianów w każdym miejscu.";
			text2 = "[fnt_pixel]A woda z fontanny płynie... świetnie! Dziękujemy ci bardzo za pomoc.";
			text3 = "[fnt_pixel]Mam nadzieję, że zobaczymy się kiedyś ponownie.";
			text4 = "[fnt_pixel]Oto mały [c_yellow]prezent[/c] ode mnie.";
            break;
        case 7: //japanese
            text1 = "[fnt_pixel]すでに戻ってきたようですね。 やっと嵐が消えて、もう何処にでもキューブを作らない。";
			text2 = "[fnt_pixel]そして、噴水からの水が流れている...素晴らしい！ これを助けてくれてありがとうございました。";
			text3 = "[fnt_pixel]またいつか会えることを願っています。";
			text4 = "[fnt_pixel]これは私からのちょっとしたプ[c_yellow]レゼントです[/c]。";
            break;
        case 8: //deutch
            text1 = "[fnt_pixel]Ich sehe, du bist schon zurück. Endlich ist der Sturm weg und macht nicht mehr überall diese Würfel. ";
			text2 = "[fnt_pixel]Und das Wasser aus dem Brunnen fließt... großartig! Vielen Dank, dass du uns dabei geholfen hast. ";
			text3 = "[fnt_pixel]Ich hoffe, wir sehen uns irgendwann wieder. ";
			text4 = "[fnt_pixel]Hier ist ein kleines [c_yellow]Geschenk[/c] von mir.";
            break;
        case 9: //french
            text1 = "[fnt_pixel]Je vois que tu es déjà de retour. Enfin la tempête est passée et ne fera plus ces cubes partout.";
			text2 = "[fnt_pixel]Et l'eau de la fontaine coule...super! Merci beaucoup de nous avoir aidé avec ça.";
			text3 = "[fnt_pixel]J'espère te revoir un de ces jours.";
			text4 = "[fnt_pixel]Voici un petit [c_yellow]cadeau[/c] de ma part.";
            break;
        case 10: //Italian
            text1 = "[fnt_pixel]Vedo che sei già tornato. Finalmente la tempesta è passata e non farà più quei cubi ovunque.";
			text2 = "[fnt_pixel]E l'acqua della fontana sta scorrendo...fantastico! Grazie mille per averci aiutato con questo.";
			text3 = "[fnt_pixel]Spero di rivederti ancora.";
			text4 = "[fnt_pixel]Ecco un piccolo [c_yellow]regalo[/c] da parte mia.";
            break;
    }    
}
	
