function scr_txt_ending_inventor1(){
    switch(global.language){
        case 0:
            #region eng
            text1 = "[fnt_pixel]Well, I'm sorry you couldn't save anyone.";
            text2 = "[fnt_pixel]That's a big problem. I can fix the ship. But can you handle it alone?";
            text3 = "[fnt_pixel]I highly doubt it.";
            text4 = "[fnt_pixel]I suggest you stay with us and help guard the temples.";
            text5 = "[fnt_pixel]Maybe we can invent a couple more cool devices.";
            #endregion
            break;        
    }
}

