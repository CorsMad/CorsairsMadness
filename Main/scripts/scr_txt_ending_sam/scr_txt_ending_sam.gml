function scr_txt_ending_sam1(){
    switch(global.language){
        case 0:
            #region eng
            text1 = "[fnt_pixel]Looks like I'm really gonna have to stay here. I'm no captain without a crew.";
            text2 = "[fnt_pixel]I hope I can be of some use here. Maybe we can find out who this merchant was ...";
            #endregion
            break;
    }
}

function scr_txt_ending_sam2(){
    switch(global.language){
        case 0:
            #region eng
            text1 = "[fnt_pixel]It's good that we were able to save at least some people, but it's a pity that not everyone managed to get out.";
            text2 = "[fnt_pixel]Maybe we can somehow find a way to weaken the dark forces.";
            text3 = "[fnt_pixel]As captain, I'm making a decision! We will stay here and help defend the temples.";
            text4 = "[fnt_pixel]Maybe we'll find out how these masks work and who this Merchant is.";
